<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">>
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/presenter_item_movie_image_view"
            android:layout_width="130dp"
            android:layout_height="180dp"
            android:layout_gravity="top|left"
            android:scaleType="centerCrop"
            android:padding="0dp"
            />

        <TextView
            android:id="@+id/presenter_item_movie_title_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/presenter_item_movie_image_view"
            android:layout_gravity="center_vertical|left"
            android:textStyle="bold"
            android:padding="4dp"/>
        <TextView
            android:id="@+id/presenter_item_movie_plot_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_below="@+id/presenter_item_movie_title_view"
            android:layout_toRightOf="@+id/presenter_item_movie_image_view"
            android:padding="4dp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:gravity="bottom"
            android:background="@android:color/darker_gray" />

    </RelativeLayout>

</LinearLayout>